<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LupaPasswordActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E2F5F9">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Lupa Password"
                android:fontFamily="@font/gfflatinbold"
                android:textColor="#01A6CA"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/rst_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/logingray_radius"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Email"
                android:fontFamily="@font/gfflatinregular"
                android:textSize="15dp"
                android:drawableStart="@drawable/custom_email_icon"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kirim"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/gfflatinbold"
                android:background="@drawable/btnlogin_radius"
                android:backgroundTint="#01A6CA"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>