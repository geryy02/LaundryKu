<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#E2F5F9">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2F5F9"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">
                <ImageView
                    android:id="@+id/profil"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/profil_laundry"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gfflatinbold"
                        android:text="Selamat Datang"
                        android:textColor="@color/black"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gfflatinregular"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/home_info"
                    android:backgroundTint="@color/primary"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_info"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:text="Sebagian penyedia jasa pengiriman berpotensi tidak bisa untuk sementara waktu."
                        android:textColor="@color/white"
                        android:fontFamily="@font/gfflatinregular"
                        android:textSize="13sp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="180dp"
                    android:src="@drawable/img_3"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Layanan Kami"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/gfflatinbold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/halamanKiloan"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="14dp">
                            <ImageView
                                android:id="@+id/imageMenu1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:cropToPadding="true"
                                android:maxHeight="50dp"
                                android:src="@drawable/img_4" />
                            <TextView
                                android:id="@+id/tvTitle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imageMenu1"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/gfflatinbold"
                                android:text="Kiloan"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                            <ImageView
                                android:id="@+id/btn_kiloan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageMenu1"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/ic_arrow"
                                app:tint="@color/primaryDark" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/halamanVip"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="14dp">
                            <ImageView
                                android:id="@+id/imageMenu2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:cropToPadding="true"
                                android:maxHeight="50dp"
                                android:src="@drawable/img_5" />
                            <TextView
                                android:id="@+id/tvTitle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageMenu2"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/gfflatinbold"
                                android:text="VIP"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                            <ImageView
                                android:id="@+id/btn_vip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageMenu2"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/ic_arrow"
                                app:tint="@color/primaryDark" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/halamanKarpet"
                        android:layout_width="178dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="14dp">
                            <ImageView
                                android:id="@+id/imageMenu3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:cropToPadding="true"
                                android:maxHeight="50dp"
                                android:src="@drawable/img_6" />
                            <TextView
                                android:id="@+id/tvTitle3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageMenu3"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/gfflatinbold"
                                android:text="Karpet"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                            <ImageView
                                android:id="@+id/btn_karpet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageMenu3"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/ic_arrow"
                                app:tint="@color/primaryDark" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/halamanEkspress"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="14dp">
                            <ImageView
                                android:id="@+id/imageMenu4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="5dp"
                                android:adjustViewBounds="true"
                                android:cropToPadding="true"
                                android:maxHeight="50dp"
                                android:src="@drawable/img_7" />
                            <TextView
                                android:id="@+id/tvTitle4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageMenu4"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/gfflatinbold"
                                android:text="Ekspress"
                                android:textColor="@color/black"
                                android:textSize="18sp"/>
                            <ImageView
                                android:id="@+id/btn_ekspress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imageMenu4"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/ic_arrow"
                                app:tint="@color/primaryDark" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>