<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PesanVipActivity"
    android:background="#E2F5F9">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_pesanVip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2F5F9"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_pesanVip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_back"
            app:title="Pemesanan VIP"
            app:titleTextAppearance="@style/Toolbar.TitleText"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/home_info"
                android:backgroundTint="@color/primary"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:text="Harap diisi"
                    android:textColor="@color/white"
                    android:fontFamily="@font/gfflatinregular"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Pelanggan"
                android:layout_marginBottom="5dp"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinregular"
                android:inputType="text"/>
            <EditText
                android:id="@+id/et_kodepelanggan_vip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="No. Pelanggan"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#828D8F"
                android:fontFamily="@font/gfflatinregular"
                android:background="@drawable/edit_form_radius"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pelanggan:"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinregular"/>
            <EditText
                android:id="@+id/et_namapelanggan_vip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Nama Pelanggan"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#828D8F"
                android:fontFamily="@font/gfflatinregular"
                android:background="@drawable/edit_form_radius"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Hp:"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinregular"/>
            <EditText
                android:id="@+id/et_nomorhp_vip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Nomor HP"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#828D8F"
                android:fontFamily="@font/gfflatinregular"
                android:background="@drawable/edit_form_radius"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal masuk:"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinregular"/>
            <EditText
                android:id="@+id/et_tanggalmasuk_vip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Tanggal masuk"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#828D8F"
                android:fontFamily="@font/gfflatinregular"
                android:background="@drawable/edit_form_radius"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal keluar"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinregular"/>
            <EditText
                android:id="@+id/et_tanggalkeluar_vip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Tanggal keluar"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#828D8F"
                android:fontFamily="@font/gfflatinregular"
                android:background="@drawable/edit_form_radius"
                android:inputType="text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP:"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinregular"/>
            <Spinner
                android:id="@+id/sp_vip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_spinner"
                android:entries="@array/itemVip_array"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item:"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinregular"/>
            <EditText
                android:id="@+id/et_item_vip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Item"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#828D8F"
                android:fontFamily="@font/gfflatinregular"
                android:background="@drawable/edit_form_radius"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga:"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinbold"
                android:inputType="number"/>
            <EditText
                android:id="@+id/et_harga_vip"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Harga"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#828D8F"
                android:fontFamily="@font/gfflatinregular"
                android:background="@drawable/edit_form_radius"
                android:inputType="number"/>
            <Button
                android:id="@+id/btn_konfirm_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:text="Konfrimasi"
                android:textColor="@color/white"
                android:fontFamily="@font/gfflatinbold"
                android:background="@drawable/btn_konfirmasi_radius"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>