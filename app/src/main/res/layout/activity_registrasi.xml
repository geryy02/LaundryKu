<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrasiActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E2F5F9">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Registrasi"
                android:fontFamily="@font/gfflatinbold"
                android:textColor="#01A6CA"
                android:textSize="30sp"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/et_namaLengkap"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/logingray_radius"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Nama Lengkap"
                android:fontFamily="@font/gfflatinregular"
                android:drawableStart="@drawable/custom_account_icon"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_nomorHP"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/logingray_radius"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Nomor Hp"
                android:fontFamily="@font/gfflatinregular"
                android:drawableStart="@drawable/custom_nomorhp_icon"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_email2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/logingray_radius"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Email"
                android:fontFamily="@font/gfflatinregular"
                android:drawableStart="@drawable/custom_email_icon"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_password2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/logingray_radius"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Buat Password"
                android:inputType="textPassword"
                android:fontFamily="@font/gfflatinregular"
                android:drawableStart="@drawable/custom_key_icon"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/et_confPass"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/logingray_radius"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Konfirmasi Passowrd"
                android:drawableStart="@drawable/custom_key_icon"
                android:inputType="textPassword"
                android:fontFamily="@font/gfflatinregular"
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrasi"
                android:fontFamily="@font/gfflatinbold"
                android:textColor="@color/white"
                android:id="@+id/registrasi_btn"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btnlogin_radius"
                android:backgroundTint="#01A6CA"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jika mempunyai akun?"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gfflatinregular"/>
                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#00A3FF"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/gfflatinregular"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>