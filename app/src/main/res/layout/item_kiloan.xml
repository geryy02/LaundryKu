<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app= "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/namaPaketKiloan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paket 1"
            android:fontFamily="@font/gfflatinbold"
            android:textColor="@color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/keteranganSatuPaketKiloan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/gfflatinregular"
            android:textColor="@color/black"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/keteranganDuaPaketKiloan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gfflatinregular"
            android:textColor="@color/black"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/keteranganTigaPaketKiloan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gfflatinregular"
            android:textColor="@color/black"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/keteranganEmpatPaketKiloan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gfflatinregular"
            android:textColor="@color/black"
            android:textSize="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp."
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinbold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/keteranganHargaKiloan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinbold"
                android:layout_marginStart="5dp"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/Kg"
                android:textColor="@color/black"
                android:fontFamily="@font/gfflatinbold"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>